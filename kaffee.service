[Unit]
Description=Kaffee Reader
Requires=api.service
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
ExecStart=/usr/bin/java -cp kaffee-reader.jar uk.dwelsh.kaffee.Main /home/pi/code/kaffee-reader/store
WorkingDirectory=/home/pi/code/kaffee-reader/out/artifacts/kaffee_reader_jar
StandardOutput=inherit
StandardError=inherit
Restart=always
User=root
Group=root