<?xml version="1.0" encoding="UTF-8"?>
<project name="module_kaffee-reader" default="compile.module.kaffee-reader">
  <dirname property="module.kaffee-reader.basedir" file="${ant.file.module_kaffee-reader}"/>
  
  <property name="module.jdk.home.kaffee-reader" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.kaffee-reader" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.kaffee-reader" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.kaffee-reader" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="kaffee-reader.output.dir" value="${module.kaffee-reader.basedir}/out/production/kaffee-reader"/>
  <property name="kaffee-reader.testoutput.dir" value="${module.kaffee-reader.basedir}/out/test/kaffee-reader"/>
  
  <path id="kaffee-reader.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="kaffee-reader.module.production.classpath">
    <path refid="${module.jdk.classpath.kaffee-reader}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="kaffee-reader.runtime.production.module.classpath">
    <pathelement location="${kaffee-reader.output.dir}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="kaffee-reader.module.classpath">
    <path refid="${module.jdk.classpath.kaffee-reader}"/>
    <pathelement location="${kaffee-reader.output.dir}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="kaffee-reader.runtime.module.classpath">
    <pathelement location="${kaffee-reader.testoutput.dir}"/>
    <pathelement location="${kaffee-reader.output.dir}"/>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="${basedir}/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.kaffee-reader">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.kaffee-reader">
    <patternset refid="excluded.from.module.kaffee-reader"/>
  </patternset>
  
  <path id="kaffee-reader.module.sourcepath">
    <dirset dir="${module.kaffee-reader.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.kaffee-reader" depends="compile.module.kaffee-reader.production,compile.module.kaffee-reader.tests" description="Compile module kaffee-reader"/>
  
  <target name="compile.module.kaffee-reader.production" depends="register.custom.compilers" description="Compile module kaffee-reader; production classes">
    <mkdir dir="${kaffee-reader.output.dir}"/>
    <javac2 destdir="${kaffee-reader.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.kaffee-reader}/javac">
      <compilerarg line="${compiler.args.kaffee-reader}"/>
      <bootclasspath refid="kaffee-reader.module.bootclasspath"/>
      <classpath refid="kaffee-reader.module.production.classpath"/>
      <src refid="kaffee-reader.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.kaffee-reader"/>
    </javac2>
    
    <copy todir="${kaffee-reader.output.dir}">
      <fileset dir="${module.kaffee-reader.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.kaffee-reader.tests" depends="register.custom.compilers,compile.module.kaffee-reader.production" description="compile module kaffee-reader; test classes" unless="skip.tests"/>
  
  <target name="clean.module.kaffee-reader" description="cleanup module">
    <delete dir="${kaffee-reader.output.dir}"/>
    <delete dir="${kaffee-reader.testoutput.dir}"/>
  </target>
</project>